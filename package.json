{
  "name": "luisnoriega-website",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "lint:next": "next lint",
    "lint:fix": "eslint . --ext .ts,.tsx --fix",
    "typecheck": "tsc -p tsconfig.json --noEmit",
    "qa": "npm run typecheck && npm run lint && npm run depcruise",
    "lint:strict": "eslint . --max-warnings=0",
    "qa:preflight": "npm run typecheck && npm run lint:strict",
    "analyze:deps": "npx dependency-cruiser --config .depcruise.js app components lib || exit 0",
    "analyze:bundle": "cross-env NEXT_TELEMETRY_DISABLED=1 next build",
    "unused": "npx knip",
    "depcruise": "npx dependency-cruiser --config .depcruise.js app components lib",
    "analyze": "cross-env ANALYZE=true next build",
    "perf:lh": "echo \"Run Lighthouse against local preview URL\"",
    "clean": "rm -rf .next out",
    "clean:all": "rm -rf .next out node_modules package-lock.json && npm install"
  },
  "dependencies": {
    "@gsap/react": "^2.1.2",
    "@hookform/resolvers": "^5.2.1",
    "@vercel/analytics": "^1.5.0",
    "gsap": "^3.13.0",
    "lenis": "^1.3.8",
    "next": "15.4.7",
    "next-plausible": "^3.12.4",
    "react": "^19.1.0",
    "react-dom": "19.1.0",
    "react-hook-form": "^7.62.0",
    "split-type": "^0.3.4",
    "three": "^0.179.1",
    "vanta": "^0.5.24",
    "zod": "^4.0.17"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3",
    "@tailwindcss/postcss": "^4",
    "@testing-library/jest-dom": "^6.8.0",
    "@testing-library/react": "^16.3.0",
    "@types/node": "^20.19.11",
    "@types/react": "^19.1.10",
    "@types/react-dom": "^19.1.7",
    "@types/three": "^0.179.0",
    "cross-env": "^7.0.3",
    "eslint": "^9",
    "eslint-config-next": "15.4.7",
    "tailwindcss": "^4",
    "typescript": "^5",
    "vitest": "^3.2.4"
  }
}
